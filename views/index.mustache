<!doctype html>
<html>
<head></head>
<body>
  <p>{{msg}}</p>
  <form action="/potatoes" method="POST">
    <input type="text" name="name" placeholder="Name">
    <input type="number" name="size" placeholder="Size">
    <button type="submit">Add Potato</button>
  </form>
  <table>
    {{#potatoes}}
    <tr>
      <td>{{name}}</td>
      <td>{{size}}</td>
    </tr>
    {{/potatoes}}
  </table>
</body>
</html>
